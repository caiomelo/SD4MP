<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufc.dc.sd4mp.activityintent" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@string/title_activity_source" >

        <uses-permission android:name="android.permission.INTERNET" />

        <activity
            android:name=".SourceActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TargetActivity"
            android:label="@string/title_activity_target" >
            <intent-filter>
                <action android:name="br.ufc.dc.sd4mp.acdon.ACAO" />
                <category android:name="br.ufc.dc.sd4mp.category.CATEGORIA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
