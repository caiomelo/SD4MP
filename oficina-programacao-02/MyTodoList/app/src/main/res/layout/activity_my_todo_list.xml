<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MyTodoList">

    <EditText
        android:id="@+id/editTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTaskDescription"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Task title">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTaskTitle"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Task description"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textViewTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTaskDescription"
        android:layout_alignRight="@+id/buttonAdd"
        android:layout_below="@+id/buttonAdd"
        android:text="Tasks" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editTaskTitle"
        android:layout_below="@+id/editTaskDescription"
        android:onClick="addTask"
        android:text="Add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List"
        android:id="@+id/listButton"
        android:onClick="listTasks"
        android:layout_below="@+id/editTaskDescription"
        android:layout_alignParentStart="true" />

</RelativeLayout>
